# ========================================
# AI智能旅游咨询专家系统配置文件示例
# ========================================
# 复制此文件为 .env 并填写实际配置值

# ========================================
# 应用基础配置
# ========================================
APP_NAME=AI智能旅游咨询专家
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 调试模式
DEBUG=false

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DIR=logs
LOG_FILE=app.log

# ========================================
# LLM 配置
# ========================================
# 默认使用的 LLM 类型
DEFAULT_LLM_TYPE=gpt4

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4
OPENAI_GPT5_MODEL_NAME=gpt-5
OPENAI_TEMPERATURE=0.7

# CloseAI 代理配置（可选）
OPENAI_API_BASE=https://api.closeai.com/v1

# 通义千问配置
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QIANWEN_MODEL_NAME=qwen-turbo
QIANWEN_TEMPERATURE=0.7

# Ollama 配置（本地模型）
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=gemma3:1b
OLLAMA_TEMPERATURE=0.7

# ========================================
# Redis 配置（可选）
# ========================================
USE_REDIS_CACHE=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# 微信配置
# ========================================
WECOM_CORP_ID=your_corp_id_here
WECOM_CORP_SECRET=your_corp_secret_here
WECOM_AGENT_ID=your_agent_id_here
WECOM_AGENT_SECRET=your_agent_secret_here
WECOM_TOKEN=your_token_here
WECOM_ENCODING_AES_KEY=your_encoding_aes_key_here

# ========================================
# 聊天会话管理配置
# ========================================
CHAT_MAX_MESSAGES=50
CHAT_MAX_TOKENS=6000
CHAT_SESSION_TIMEOUT_HOURS=1
CHAT_CLEANUP_INTERVAL_HOURS=1

# ========================================
# 使用说明
# ========================================
# 1. 复制此文件为 .env
# 2. 填写实际的配置值
# 3. 不要提交 .env 文件到版本控制
# 4. 至少需要配置一个LLM API密钥（OpenAI或通义千问）
# 5. Redis配置为可选，用于缓存用户会话